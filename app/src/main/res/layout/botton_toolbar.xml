<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center"
            android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="دیوارمن"
                        android:textSize="18dp"
                        android:background="@android:color/transparent"
                        android:textColor="#ffffff"
                        android:drawableTop="@drawable/ic_action_prof"
                        android:id="@+id/btn_my_adv"
                       />
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="جستجو"
                    android:textSize="18dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/ic_action_comment2"
                    android:id="@+id/btn_search"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="دسته بندیها"
                    android:textSize="18dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/ic_action_nav"
                    android:id="@+id/btn_category"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="خانه"
                    android:textSize="18dp"
                    android:background="@android:color/transparent"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/ic_action_comment"
                    android:id="@+id/btn_home"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.Toolbar>